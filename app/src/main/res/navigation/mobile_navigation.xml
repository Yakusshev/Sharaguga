<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_schedule">

    <fragment
        android:id="@+id/navigation_universities"
        android:name="com.yakushev.sharaguga.ui.groupchoose.universities.UniversitiesFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_universities" >

        <action
            android:id="@+id/action_universities_to_faculties"
            app:destination="@id/navigation_faculties"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

    </fragment>

    <fragment
        android:id="@+id/navigation_faculties"
        android:name="com.yakushev.sharaguga.ui.groupchoose.faculties.FacultiesFragment"
        android:label="@string/title_faculties"
        tools:layout="@layout/fragment_faculties">

        <argument
            android:name="universityId"
            app:argType="string"
            android:defaultValue="null"/>

        <argument
            android:name="universityName"
            app:argType="string"
            android:defaultValue=""/>

        <action
            android:id="@+id/action_faculties_to_groups"
            app:destination="@id/navigation_groups"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

    </fragment>

    <fragment
        android:id="@+id/navigation_groups"
        android:name="com.yakushev.sharaguga.ui.groupchoose.groups.GroupsFragment"
        android:label="@string/title_groups"
        tools:layout="@layout/fragment_groups">

        <argument
            android:name="facultyPath"
            app:argType="string"
            android:defaultValue="null"/>

        <argument
            android:name="facultyName"
            app:argType="string"
            android:defaultValue=""/>

        <action
            android:id="@+id/action_groups_to_schedule"
            app:destination="@id/navigation_schedule"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

    </fragment>

    <fragment
        android:id="@+id/navigation_schedule"
        android:name="com.yakushev.sharaguga.ui.table.ScheduleFragment"
        tools:layout="@layout/fragment_schedule">

        <argument
            android:name="groupPath"
            app:argType="string"
            android:defaultValue="null"/>

        <argument
            android:name="groupName"
            app:argType="string"
            android:defaultValue=""/>

        <action
            android:id="@+id/action_schedule_to_add_fragment"
            app:destination="@id/navigation_add_period"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

    </fragment>

    <dialog
        android:id="@+id/navigation_add_period"
        android:name="com.yakushev.sharaguga.ui.AddPeriodFragment"
        tools:layout="@layout/fragment_add_period">

    </dialog>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.yakushev.sharaguga.ui.groupchoose.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

</navigation>
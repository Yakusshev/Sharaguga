<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sharaguga" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background_activity_views</item>

        <item name="actionBarItemBackground">@color/background_activity_views</item>
        <item name="android:background">@color/background_main</item> <!-- background -->
        <item name="android:windowBackground">?attr/colorPrimaryVariant</item> <!-- Loading App Screen color -->
        <item name="android:colorBackground">@color/purple_200</item> <!-- no changes -->

        <item name="tabBackground">@color/background_activity_views</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>
</resources>